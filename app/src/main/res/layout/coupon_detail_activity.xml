<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/coupon_title_tv"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sample_coupon_text"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/coupon_dollar_amount_tv"
        android:text="@string/sample_coupon_price"
        android:layout_below="@id/coupon_title_tv"
        android:textSize="52sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mantis"
        android:gravity="center"
        android:layout_width="160dp"
        android:layout_height="160dp"/>

    <View android:layout_width="160dp"
        android:layout_below="@id/coupon_title_tv"
        android:layout_centerHorizontal="true"
        android:layout_height="160dp"
        android:background="@drawable/circle"/>

    <TextView
        android:id="@+id/coupon_detail_tv"
        android:text="Save $2.00 on Scotts Toilet Paper."
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textSize="22sp"
        android:layout_below="@id/coupon_dollar_amount_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/coupon_disclaimer_tv"
        android:text="@string/consumer_warning_text"
        android:textSize="10.5sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/unlock_button"
        android:layout_width="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_height="100dp"/>


    <Button
        android:id="@+id/unlock_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="@string/ButtonText"
        style="@style/GreenButtonStyle"
        android:layout_width="200dp"
        android:layout_height="48dp" />


</RelativeLayout>