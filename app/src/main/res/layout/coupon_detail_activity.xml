<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/coupon_title_tv"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lines="3"
        android:ellipsize="end"
        android:text="@string/sample_coupon_text"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/coupon_dollar_amount_tv"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/coupon_title_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/sample_coupon_price"
        android:textColor="@color/mantis"
        android:textSize="52sp"
        android:textStyle="bold"/>

    <View android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/coupon_title_tv"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle"/>

    <TextView
        android:id="@+id/coupon_detail_tv"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@id/coupon_dollar_amount_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Save $2.00 on Scotts Toilet Paper."
        android:lines="2"
        android:ellipsize="end"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/coupon_disclaimer_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/consumer_warning_text"
        android:textColor="@android:color/darker_gray"
        android:lines="3"
        android:ellipsize="end"
        android:textSize="10.5sp"/>

</RelativeLayout>