<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tme.transactthis.com.couponquest.RewardsCardActivity">

    <ImageView
        android:id="@+id/companyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/harriss_teeter"
        android:paddingTop="24dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harris Teeter"
        android:textSize="24sp"
        android:layout_below="@+id/companyImage"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyName"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Total Savings: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mantis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="$9.37"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/rewardsCardBarcode"
        android:layout_width="250dp"
        android:layout_height="250dp"

        android:src="@drawable/rewards_card_code"
        android:paddingTop="34dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/companyName"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
